/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "paths": {
      "@hmcts/opal-frontend-common": [
        "./projects/opal-frontend-common/src/public-api"
      ],
      "@hmcts/opal-frontend-common/*": [
        "./projects/opal-frontend-common/src/lib/*"
      ],
      "@hmcts/opal-frontend-common/core/components/govuk": [
        "./projects/opal-frontend-common/core/components/govuk"
      ],
      "@hmcts/opal-frontend-common/core/constants": [
        "./projects/opal-frontend-common/core/constants"
      ],
      "@hmcts/opal-frontend-common/core/guards": [
        "./projects/opal-frontend-common/core/guards"
      ],
      "@hmcts/opal-frontend-common/core/interceptors": [
        "./projects/opal-frontend-common/core/interceptors"
      ],
      "@hmcts/opal-frontend-common/core/interfaces": [
        "./projects/opal-frontend-common/core/interfaces"
      ],
      "@hmcts/opal-frontend-common/core/mocks": [
        "./projects/opal-frontend-common/core/mocks"
      ],
      "@hmcts/opal-frontend-common/core/pages": [
        "./projects/opal-frontend-common/core/pages"
      ],
      "@hmcts/opal-frontend-common/core/routing": [
        "./projects/opal-frontend-common/core/routing"
      ],
      "@hmcts/opal-frontend-common/core/services": [
        "./projects/opal-frontend-common/core/services"
      ],
      "@hmcts/opal-frontend-common/core/stores": [
        "./projects/opal-frontend-common/core/stores"
      ],
      "@hmcts/opal-frontend-common/core/types": [
        "./projects/opal-frontend-common/core/types"
      ],
      "@hmcts/opal-frontend-common/core/validators": [
        "./projects/opal-frontend-common/core/validators"
      ]
    },
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ],
     "rootDir": "./projects/opal-frontend-common"
  },
  "include": [
    "./projects/opal-frontend-common/**/*.ts"
  ],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}