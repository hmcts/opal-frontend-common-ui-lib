/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "paths": {
      "@hmcts/opal-frontend-common": [
        "./projects/opal-frontend-common/public-api"
      ],
      "@hmcts/opal-frontend-common/components/abstract": [
        "projects/opal-frontend-common/components/abstract"
      ],
      "@hmcts/opal-frontend-common/components/alphagov": [
        "projects/opal-frontend-common/components/alphagov"
      ],
      "@hmcts/opal-frontend-common/components/govuk": [
        "projects/opal-frontend-common/components/govuk"
      ],
      "@hmcts/opal-frontend-common/components/moj": [
        "projects/opal-frontend-common/components/moj"
      ],
      "@hmcts/opal-frontend-common/constants": [
        "projects/opal-frontend-common/constants"
      ],
      "@hmcts/opal-frontend-common/guards": [
        "projects/opal-frontend-common/guards"
      ],
      "@hmcts/opal-frontend-common/interceptors": [
        "projects/opal-frontend-common/interceptors"
      ],
      "@hmcts/opal-frontend-common/interfaces": [
        "projects/opal-frontend-common/interfaces"
      ],
      "@hmcts/opal-frontend-common/mocks": [
        "projects/opal-frontend-common/mocks"
      ],
      "@hmcts/opal-frontend-common/pages": [
        "projects/opal-frontend-common/pages"
      ],
      "@hmcts/opal-frontend-common/pipes": [
        "projects/opal-frontend-common/pipes"
      ],
      "@hmcts/opal-frontend-common/resolvers": [
        "projects/opal-frontend-common/resolvers"
      ],
      "@hmcts/opal-frontend-common/services": [
        "./projects/opal-frontend-common/services"
      ],
      "@hmcts/opal-frontend-common/stores": [
        "projects/opal-frontend-common/stores"
      ],
      "@hmcts/opal-frontend-common/types": [
        "projects/opal-frontend-common/types"
      ],
      "@hmcts/opal-frontend-common/validators": [
        "projects/opal-frontend-common/validators"
      ]
    },
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ],
     "rootDir": "./projects/opal-frontend-common"
  },
  "include": [
    "./projects/opal-frontend-common/**/*.ts"
  ],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}