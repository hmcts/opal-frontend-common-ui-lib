{
  "name": "@hmcts/opal-frontend-common-ui-lib",
  "version": "0.0.61",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "yarn clean && ng build && cp README.md dist/opal-frontend-common",
    "clean": "rm -rf dist",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --runner=vitest --watch=false",
    "test:watch": "ng test --runner=vitest --watch",
    "test:coverage": "ng test --runner=vitest --watch=false --coverage",
    "lint": "yarn prettier && yarn lint:ng",
    "lint:ng": "ng lint",
    "prettier": "prettier --check \"./**/*.{ts,js,html,scss}\"",
    "prettier:fix": "prettier --write \"./**/*.{ts,js,html,scss}\"",
    "audit:save": "yarn audit --json --production > yarn-audit-known-issues || true",
    "audit:check": "yarn audit --json --production > yarn-audit-current || true && jq -s '[.[] | select(.type==\"auditAdvisory\") | .data.advisory.id] | sort' yarn-audit-current > current-ids.json && jq -s '[.[] | select(.type==\"auditAdvisory\") | .data.advisory.id] | sort' yarn-audit-known-issues > known-ids.json && diff -q known-ids.json current-ids.json || (echo '‚ùå New vulnerabilities detected. Please review.' && exit 1)"
  },
  "dependencies": {
    "@angular/animations": "^21.1.3",
    "@angular/common": "^21.1.3",
    "@angular/compiler": "^21.1.3",
    "@angular/core": "^21.1.3",
    "@angular/forms": "^21.1.3",
    "@angular/platform-browser": "^21.1.3",
    "@angular/platform-browser-dynamic": "^21.1.3",
    "@angular/router": "^21.1.3",
    "@microsoft/applicationinsights-web": "^3.3.6",
    "@ministryofjustice/frontend": "^8.0.0",
    "@ngrx/signals": "^21.0.0",
    "accessible-autocomplete": "^3.0.1",
    "fast-sort": "^3.4.1",
    "govuk-frontend": "^5.9.0",
    "home-office-kit": "^1.2.0",
    "launchdarkly-js-client-sdk": "^3.5.0",
    "luxon": "^3.5.0",
    "prettier": "^3.5.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.1.3",
    "@types/luxon": "^3.4.2",
    "angular-eslint": "21.2.0",
    "eslint": "^9.21.0",
    "ng-packagr": "^21.0.0",
    "typescript": "~5.9.0",
    "typescript-eslint": "8.55.0",
    "vitest": "^3.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "jsdom": "^26.0.0"
  },
  "resolutions": {
    "http-proxy-middleware": "^3.0.5"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
