{
  "name": "@hmcts/opal-frontend-common-ui-lib",
  "version": "0.0.20",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "yarn clean && ng build && cp README.md dist/opal-frontend-common",
    "clean": "rm -rf dist",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=false",
    "test:coverage": "ng test --no-watch --code-coverage",
    "lint": "yarn prettier && yarn lint:ng",
    "lint:ng": "ng lint",
    "prettier": "prettier --check \"./**/*.{ts,js,html,scss}\"",
    "prettier:fix": "prettier --write \"./**/*.{ts,js,html,scss}\"",
    "audit:save": "yarn audit --json --production > yarn-audit-known-issues || true",
    "audit:check": "yarn audit --json --production > yarn-audit-current || true && jq -s '[.[] | select(.type==\"auditAdvisory\") | .data.advisory.id] | sort' yarn-audit-current > current-ids.json && jq -s '[.[] | select(.type==\"auditAdvisory\") | .data.advisory.id] | sort' yarn-audit-known-issues > known-ids.json && diff -q known-ids.json current-ids.json || (echo '‚ùå New vulnerabilities detected. Please review.' && exit 1)"
  },
  "dependencies": {
    "@angular/animations": "^19.2.4",
    "@angular/common": "^19.2.4",
    "@angular/compiler": "^19.2.4",
    "@angular/core": "^19.2.4",
    "@angular/forms": "^19.2.4",
    "@angular/platform-browser": "^19.2.4",
    "@angular/platform-browser-dynamic": "^19.2.4",
    "@angular/router": "^19.2.4",
    "@microsoft/applicationinsights-web": "^3.3.6",
    "@ministryofjustice/frontend": "^5.0.0",
    "@ngrx/signals": "^19.0.1",
    "accessible-autocomplete": "^3.0.1",
    "fast-sort": "^3.4.1",
    "govuk-frontend": "^5.9.0",
    "launchdarkly-js-client-sdk": "^3.5.0",
    "luxon": "^3.5.0",
    "prettier": "^3.5.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.5",
    "@angular/cli": "^19.2.5",
    "@angular/compiler-cli": "^19.2.4",
    "@types/jasmine": "~5.1.0",
    "@types/luxon": "^3.4.2",
    "angular-eslint": "19.8.1",
    "eslint": "^9.21.0",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.0.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "8.35.0"
  },
  "resolutions": {
    "http-proxy-middleware": "^3.0.5"
  }
}
